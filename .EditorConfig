# Indicate this is the root of the project.
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
charset = utf-8
quote_type = double
max_line_length = 100

[*.{ts,tsx,js,jsx}]
quote_type = single

[*.{json,yml,css}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
